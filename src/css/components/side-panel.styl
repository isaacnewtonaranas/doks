.tree
  width 417px
  height 367px
  .q-tree
    height 317px
    overflow-y scroll
    overflow-x hidden
    width 120%
    &__arrow
      display none
    .folder-open-added-icon
      height 11px
      width 23px
      background #ff9800
      top 16px
      position absolute
      left 33px
      border-top-right-radius: 3px
      transform skew(-23deg)